# WhatsApp Gateway PaaS Backend - Development Environment Variables

# Server Configuration
PORT=8000
NODE_ENV=development
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/whatsapp_gateway

# Redis Configuration
REDIS_URL=redis://:redispassword@localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Worker Configuration
WORKER_AUTH_TOKEN=worker-secret-token-change-in-production
WORKER_HEALTH_CHECK_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false

# External Services
WEBHOOK_SECRET=webhook-secret-key-change-in-production
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
ENABLE_METRICS=true

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true